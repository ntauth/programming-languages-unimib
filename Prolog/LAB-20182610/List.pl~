%% -*- Mode: Prolog -*-

%% Find the minimum of a list
list_min([H], H).
list_min([H | T], H) :- X >= H, list_min(T, X).
list_min([H | T], X) :- X < H, list_min(T, X).

%% Remove a single occurence of an element in a list
list_remove([], _, []).
list_remove([H | T], H, T).
list_remove([H | T], NH, [H | T1]) :- NH \= H, list_remove(T, NH, T1).

%% Selection Sort
list_selesort([], []).
list_selesort(L, [H | T]) :- list_min(X, H), list_selesort(T,
